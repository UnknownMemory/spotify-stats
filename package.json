{
    "name": "spotify-stats",
    "version": "1.0.0",
    "description": "",
    "main": "./src/server/index.js",
    "type": "module",
    "scripts": {
        "dev-client": "parcel watch ./src/client/public/index.html --out-dir dist",
        "dev-server": "nodemon --watch ./src/server --exec babel-node --presets babel-preset-env ./src/server/index.js",
        "dev": "concurrently --kill-others \"npm run dev-client\" \"npm run dev-server\"",
        "build": "parcel build ./src/client/public/index.html",
        "start": "npm run build && node --experimental-modules ./src/server/index.js",
        "format": "prettier \"src/**/*.{js, html}\" --write",
        "lint": "eslint \"src/**/*.{js, jsx}\" --quiet",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purpleworld/spotify-stats.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/purpleworld/spotify-stats/issues"
    },
    "homepage": "https://github.com/purpleworld/spotify-stats#readme",
    "dependencies": {
        "app-root-path": "^3.0.0",
        "body-parser": "^1.19.0",
        "concurrently": "^5.1.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dom": "0.0.3",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "node-sass": "^4.13.1",
        "parcel-bundler": "^1.12.4",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-router-dom": "^5.1.2",
        "react-transition-group": "^4.3.0",
        "request": "^2.88.2"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.0.3",
        "babel-preset-env": "^1.7.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-react-hooks": "^2.4.0",
        "nodemon": "^2.0.2",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.19.1"
    }
}
